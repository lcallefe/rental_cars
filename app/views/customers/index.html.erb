<h1>Nossos clientes</h1>

<% if Customer.exists? %>
    <% @customers.each do |customer| %>
        <div>
            <%= link_to "#{customer.name}", customer %>
        </div>
    <% end %>
<% else %>
    <%= "Nenhum cliente cadastrado" %>
<% end %>

<div>
    <%= link_to "Voltar", root_path %>
    <%= link_to "Cadastrar cliente", new_customer_path %>
</div>

