<h1>Categorias de carro</h1>

<% if CarCategory.exists? %>
    <% @car_categories.each do |category| %>
    <%= link_to category.name, car_category_path(category.id) %>
    <% end %>
<% else %>
    <%= "Nenhuma categoria cadastrada" %>
<% end %>

<div>
    <%= link_to "Voltar", root_path %>
    <%= link_to "Registrar uma nova categoria", new_car_category_path %>
</div>
