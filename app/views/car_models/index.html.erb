<h1>Modelos de carro</h1>

<% if CarModel.exists? %>
    <% @car_models.each do |car_model| %>
        <div>
            <%= link_to "#{car_model.name} - #{car_model.year}", car_model %>
        </div>
        <div>
            <%= car_model.manufacturer %>
        </div>
        <div>
            <%= car_model.year %>
        </div>
        <div>
            <%= car_model.car_category.name %>
        </div>
    <% end %>
<% else %>
    <%= "Nenhum modelo de carro cadastrado" %>
<% end %>

<div>
    <%= link_to "Voltar", root_path %>
    <%= link_to "Registrar um modelo de carro", new_car_model_path %>
</div>

